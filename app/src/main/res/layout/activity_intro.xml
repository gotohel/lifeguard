<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:background="@drawable/background_gradation">

    <ImageView
            android:layout_width="282dp"
            android:layout_height="400dp"
            android:layout_gravity="bottom"
            app:srcCompat="@drawable/ic_doughnut_intro"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="80dp"
            android:paddingStart="29dp"
            android:paddingEnd="29dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello!"
                android:textSize="30sp"
                android:fontFamily="@font/noto_sans_kr_bold_hestia"
                android:textColor="@color/white"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="My name is Dough\nand your food keeper!"
                android:textSize="15sp"
                android:fontFamily="@font/noto_sans_kr_regular_hestia"
                android:textColor="@color/white"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="I will watch your food, and find it with\nallergies in your body!"
                android:textSize="15sp"
                android:fontFamily="@font/noto_sans_kr_regular_hestia"
                android:textColor="@color/white"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Press ‘Getting Start’ button in bottom."
                android:textSize="15sp"
                android:fontFamily="@font/noto_sans_kr_regular_hestia"
                android:textColor="@color/white"/>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
            android:onClick="goToAllergyListActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/fab_horizontal_margin"
            android:layout_marginVertical="48dp"
            android:layout_gravity="end|bottom"
            app:srcCompat="@drawable/ic_arrow_right_black_24dp"/>

</FrameLayout>